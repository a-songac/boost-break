<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="project.boostbreak.ExercisesListActivity">

    <!-- "Fragment A: ExerciseOLD Description" -->
    <fragment
        android:name="project.boostbreak.ExercisesListFragment"
        android:id="@+id/exercises_list_frag"
        android:layout_width="0dp"
        android:layout_weight="0.50"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_exercises_list" />

    <!-- "Fragment B: ExerciseOLD Description" -->
    <fragment
        android:name="project.boostbreak.ExerciseDescriptionFragment"
        android:id="@+id/exercises_description_frag"
        android:layout_width="wrap_content"
        android:layout_weight="0.50"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_exercise_description"/>

</LinearLayout>
